  <refsynopsisdiv>
    <cmdsynopsis>
      <command>&dhname;</command>
      <group choice="opt">
        <arg choice="plain">
         <arg choice="plain"><option> start</option></arg>
	 |
         <arg choice="plain"><option>stop</option></arg>
        </arg>
      </group>
    </cmdsynopsis>
